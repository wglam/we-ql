.user-avatar {
  width: 128rpx;
  height: 128rpx;
  padding: 10rpx;
  border-radius: 50%;
  border-width: 2rpx;
  border-color: #eee;
  border-style: solid;
}

.nickname {
  color: #333;
}

.user-step {
  width: 100%;
  height: 64rpx;
}

.banner {
  height: 28%;
  background-color: #fff;
  display: block;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.video-play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ffffff6a;
  font-size: 72rpx;
}

.btn-conner-mini {
  border-radius: 2em;
  background: linear-gradient(#3552f4, #23359f);
  text-align: center;
  color: white;
  width: 7em;
  padding: 8rpx;
  align-items: center;
  justify-content: flex-end;
}

.progress-shew {
  background: #e6e6e6;
  transform: skew(-10deg);
  height: 16rpx;
}

.progress-bar {
  background: linear-gradient(#3552f4, #23359f);
}

.btn-conner {
  border-radius: 2em;
  background: linear-gradient(#3552f4, #23359f);
  text-align: center;
  color: white;
  padding: 16rpx;
  align-items: center;
  justify-content: flex-end;
}