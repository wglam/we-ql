.user-info {
  position: absolute;
  top: 0rpx;
  width: 100%;
}

.video-play {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(255, 255, 255, 0.8);
  font-size: 72rpx;
}

.banner {
  background-color: white;
  height: 340rpx;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-top: -24rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-shadow {
  width: 100%;
  height: 100%;
  box-shadow: 0rpx 1rpx 20rpx 2rpx rgba(0, 0, 0, 0.3);
}

.user-step {
  width: 100%;
  height: 60rpx;
  background: linear-gradient(180deg, #eedecf, #e5cfcb);
  border-top-left-radius: 2em;
  border-bottom-left-radius: 2em;
  text-align: center;
  color: #ffa000;
}

.user-step-icon {
  width: 90rpx;
  height: 90rpx;
  background: linear-gradient(#ebb774, #e88b12);
  border-radius: 2em;
  color: #e3cac6;
  display: flex;
  align-items: center;
}

.align {
  width: 100%;
  text-align: center;
}

.vip-icon {
  width: 32rpx;
  height: 32rpx;
}

.jaolian {
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  bottom: 24rpx;
  right: 24rpx;
  background: transparent;
  border-color: transparent;
  border-radius: 50%;
}
