<view class='body flex-col m p radius' hover-class='hover' hidden='{{!user.vip}}'>
  <view class='flex-col'>
    <view class='text-lg font-l'>健身计划</view>
    <view class='grays-text font-min'>Fitness plan</view>
  </view>

  <view class='flex-col align-end' style='margin-left:2em;margin-right:2em;'>
    <view class='grays-text font-min'>完成进度</view>
    <view class='font-min'>{{ process+'%'}}</view>
  </view>
  <view class="progress-shew" style='margin-left:2em;margin-right:2em;'>
    <view class="progress-bar" style="{{'width:'+ process+'%'}}" />
  </view>
</view>

<view class='body flex-col m p radius' hover-class='hover' hidden='{{!user.vip}}'>
  <view class='flex-col'>
    <view class='text-lg font-l'>饮食计划</view>
    <view class='grays-text font-min'>Eating plan</view>
  </view>
  <image class='radius mt mb' src='{{image}}' mode='aspectFill' />
