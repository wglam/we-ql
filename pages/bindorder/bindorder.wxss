.panel {
  display: flex;
  background-color: white;
  align-items: center;
  justify-content: space-between;
}

.left {
  display: flex;
  background-color: white;
  align-items: center;
}

image {
  width: 144rpx;
  height: 144rpx;
}

.right {
  height: 144rpx;
}

.category {
  flex: 1;
  font-size: 48rpx;
}

.name {
  flex: 1;
  color: #666;
  display: inline-flex;
  align-items: flex-end;
}

.payment {
  color: red;
  font-size: 48rpx;
}

.price {
  color: #666;
  font-size: 36rpx;
  text-decoration: line-through;
}
