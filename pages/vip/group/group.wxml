<swiper class='body pl pr' autoplay circular interval="{{2000}}" indicator-color='#CCCCCC' indicator-active-color='#ffa000'>
  <block wx:for="{{groups}}" wx:key="*this">
    <swiper-item wx:if="{{index%2==0}}" class='swiperitem'>
      <view class='item'>
        <image class='avatar ' src='{{item.avatar}}' mode='widthFix' />
        <view class='ml'>{{item.name}}</view>
        
      </view>
      <view class='item' wx:if="{{(index+1)<groups.length}}">
        <image class='avatar' src='{{groups[index+1].avatar}}' mode='widthFix' />
        <view class='ml'>{{groups[index+1].name}}</view>
      </view>
    </swiper-item>
  </block>
</swiper>