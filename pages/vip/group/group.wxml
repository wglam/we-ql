<swiper class='banner' autoplay indicator-dots circular interval="{{2000}}" indicator-color='#CCCCCC' indicator-active-color='#ffa000'>
  <block wx:for="{{swiper}}" wx:key="*this">
    <swiper-item>
      <image class='martch-parent' src='{{item.image}}' mode='aspectFill' />
    </swiper-item>
  </block>
</swiper>
<view class='body flex'>
  <view class='flex-1 pl'>
    <view class='price'>
      ￥{{price}}
    </view>
    <view class='src_price'>
      ￥{{srcPrice}}
    </view>
  </view>
  <view class='tips flex-1  h-end pr'>
    {{tips}}
  </view>
</view>
<view class='body pl pr pb'>
  {{title}}
</view>
<view class='body pl pr flex hmt hp-v'>
  <view style='flex:1;'>
    {{num}}人在拼单，可直接参与
  </view>
  <view class='more'>查看更多</view>
</view>
