  justify-content: space-between;
  height: 108rpx;
  background: white;
}

.bottom-btn {
  width: 100%;
  height: 96rpx;
  display: inline-flex;
  background-color: white;
  text-align: center;
  align-items: center;
  justify-content: center;
}

