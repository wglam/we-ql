<import src='/common/template/template.wxml' />

<form bindsubmit="formSubmit">
  <bottom>
    
    <view slot='content'>
    
      <view class='form-box'>
        <block wx:for="{{forms}}" wx:key='{{index}}'>
          <template is="{{item.template}}" data="{{...item}}" />
        </block>
      </view>

    </view>
    <view class='bottom' slot="bottom">
      <button class='submit' hover-class='submit-hover' style='width:35%;' formType="submit">
        提交
      </button>
      <button class='cancel' hover-class='cancel-hover' style='width:35%;'>
        取消
      </button>
    </view>
  </bottom>
</form>