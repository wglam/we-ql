<import src="../../../wxParse/wxParse.wxml" />
<view class="wxParse" style='margin-bottom:108rpx;'>
  <template is="wxParse" data="{{wxParseData:article.nodes}}" />
</view>
<view class='bottom'>
  <button open-type='contact' class='image-btn' style='width:25%;padding:0rpx;line-height:1.6;height:108rpx;' hover-class='hover' hover-start-time='10'>
    <image class='image-btn-icon' src="/img/kefu.png" mode='widthFix' />
