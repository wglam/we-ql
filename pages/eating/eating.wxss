.card {
  background: white;
  border-radius: 24rpx;
  color: #333;
}
.card-left {
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  width:18rpx;
}
.card-title {
  font-size: 28rpx;
  padding-left: 1em;
  padding-top: 12rpx;
  padding-bottom: 6rpx;
}

.content {
  font-size: 28rpx;
  padding-left: 1em;
}

.content.title {
  font-size: 24rpx;
  color: #999;
}

.bottom-img {
  width: 80%;
  height: 100%;
}

.i-btn {
  width: 100%;
  height: 100%;
  border-radius: 0rpx;
  font-size: 36rpx;
  letter-spacing: 3rpx;
}
