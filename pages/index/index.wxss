.user-avatar {
  width: 128rpx;
  height: 128rpx;
  padding: 10rpx;
  border-radius: 50%;
  border-width: 2rpx;
  border-color: #eee;
  border-style: solid;
}

.nickname {
  color: #333;
  padding-left: 24rpx;
}

.user-step {
  width: 100%;
  height: 64rpx;
  padding: 10rpx;
  border-width: 2rpx;
  border-color: #eee;
  border-style: solid;
}

.top {
  padding: 48rpx 0rpx 48rpx 48rpx;
  height: 260rpx;
  /* border-bottom: 1rpx solid #eee; */
}

.banner {
  height: 260rpx;
  border: 1rpx solid #dcdcdc;
  background-color: #fff;
  box-shadow: 12rpx 8rpx 12rpx #dcdcdc;
  margin: -120rpx 72rpx 0rpx;
  position: relative;
}
