/* pages/my/coach/coach.wxss */

page {
  background-color: #2e3132;
  height: 100%;
  font-size: 30rpx;
  line-height: 1.6;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.qr-card {
  margin: 24rpx;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 6rpx;
  padding: 24rpx;
  align-items: center;
}

.name {
  font-size: 1.5em;
  display: inline-flex;
  align-items: center;
  margin-left: 24rpx;
}

.qr {
  width: 100%;
  text-align: center;
}
