.tab-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-slider {
  height: 4rpx;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
}

.tab-content {
  width: 100%;
  flex: 1;
  background-color: white;
  align-items: center;
  justify-content: center;
}
