/* common/card.wxss */
@import '/style/my.wxss';
@import '/style/icon.wxss';

.card {
  position: relative;
  background-color: white;
  height: 320rpx;
}

.card-shadow {
  box-shadow: 0rpx 1rpx 20rpx 2rpx rgba(0, 0, 0, 0.2);
}

.card-hover {
  box-shadow: 0rpx 1rpx 20rpx 2rpx rgba(0, 0, 0, 0.1);
}

.card-img {
  width: 100%;
  height: 100%;
}

.card-info {
  position: absolute;
  top: 0rpx;
  width: 100%;
  line-height:1.2em;
}

.card-pro {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
}

.btn {
  height: 76rpx;
  display: flex;
  align-items: center;
  color: #ffa000;
  font-size: 32rpx;
  justify-content: center;
}

.progress-shew {
  background: #e6e6e680;
  transform: skew(-15deg);
  height: 16rpx;
}

.progress-bar {
  background: linear-gradient(#ffce76, #ffa000);
  height: 100%;
}
