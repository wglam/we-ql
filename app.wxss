@import 'style/icon.wxss';
@import 'style/my.wxss';

/* reset */

page {
  background-color: #ededed;
  height: 100%;
  font-size: 30rpx;
  line-height: 1.6;
}

/* lib */

.strong {
  font-weight: bold;
}

.tc {
  text-align: center;
}

/* page */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

button {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  /* border-right: 2rpx solid #f8f8f8; *//* border-top: 2rpx solid #f8f8f8; */
  text-align: center;
  background: white;
  border-radius: 0;
}

button::after {
  border: none;
}

