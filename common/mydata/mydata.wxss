@import '/style/ql.wxss';
@import '/style/icon.wxss';

.charts {
  width: 100%;
  height: 40%;
  background: #584f60;
}

.click-item {
  background: white;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 88rpx;
  align-items: center;
  border-top: 1rpx solid #eee;
}

.bmi-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input-panel {
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 96rpx;
  align-items: center;
}

.input {
  text-align: center;
  vertical-align: middle;
  width: 8em;
  border-bottom: 1rpx solid #eee;
  margin-right: 6rpx;
}

.dialog {
  width: 60%;
  background: white;
}

.submit {
  background: #ff7e00;
  color: white;
  border-radius: 2em;
  margin-top: 24rpx;
  display: inline-flex;
  height: 76rpx;
  width: 70%;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  letter-spacing: 6rpx;
}

.submit-hover {
  background: #d86e04;
}

.cancel {
  margin: 24rpx;
  height: 64rpx;
  font-size: 28rpx;
  letter-spacing: 6rpx;
}

.btn_bottom {
  position: fixed;
  bottom: 0;
  background: #ff7e00;
  color: white;
  display: inline-flex;
  height: 88rpx;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.loading-ing {
  height: 36rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #999;
  font-size: 24rpx;
  justify-content: center;
  text-align: center;
  vertical-align: middle;
  line-height: 1em;
}

.iconfont-spin {
  display: inline-block;
  -webkit-animation: icon-spin 2s infinite linear;
  animation: icon-spin 2s infinite linear;
}

.icon-loading:before {
  content: "\e64f";
  color: #999;
  font-size: 24rpx;
}
