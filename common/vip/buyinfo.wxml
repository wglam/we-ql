<view class='title'>{{name}}</view>
<scroll-view scroll-x="true" class='info-panel'>
  <block wx:for="{{infos}}" wx:key="*this">
    <view class='info' style="border-color:{{index==current?'#e88b12':''}}" bindtap='infoTab' data-index='{{index}}' data-item='{{item}}'>
      <view style=' font-size: 1.5em;'>
        {{item.period}}
      </view>
      <view style='mar'>
        {{item.money}}元
      </view>
    </view>
  </block>
</scroll-view>
<view class='title'>服务内容</view>
<view class='pro-panel'>
  <block wx:for="{{detials}}" wx:key="*this">
    <view id='{{index}}' class='pro-item'>
      <image class='pro-item-img' src='{{item.url}}' mode='widthFix' />
      <view class='pro-item-name'> {{item.name}}</view>
    </view>
  </block>
</view>