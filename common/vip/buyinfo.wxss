.title {
  text-align: center;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.info {
  width: 6em;
  height: 100%;
  display: inline-block;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
  margin: 8rpx;
  padding: 8rpx;
  background-color: white;
  border-radius: 6rpx;
}

.info-panel {
  white-space: nowrap;
  text-align: center;
}

.inner-center {
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.pro-panel {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.pro-item {
  min-width: 45%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 8rpx;
  border: 2rpx solid white;
  background-color: white;
}

.pro-item-img {
  width: 100%;
}

.pro-item-name {
  text-align: center;
}
